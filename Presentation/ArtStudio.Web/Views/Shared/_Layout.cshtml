<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - ArtStudio</title>
    <meta name="msapplication-TileImage" content="~/assets/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <meta charset="utf-8" />

    <!--    Favicons-->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicons/favicon.ico">
    <link rel="manifest" href="~/assets/img/favicons/manifest.json">


    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/jquery/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />


    <!--    Stylesheets-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/vendors/prism/prism.css" rel="stylesheet">
    <link href="~/vendors/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/css/theme.min.css" rel="stylesheet" />
    <link href="~/assets/css/user.min.css" rel="stylesheet" />

    <link href="~/lib/datatables-1.13.8/css/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables-1.13.8/css/datatables.bootstrap5.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <style>
        .select2-container--bootstrap-5 .select2-selection--single {
            border-radius: 30px;
            min-height: calc(2.0em + 0.75rem + 2px);
            border: 2px solid #8e8e8e
        }

        .form-control {
            padding: 10px;
        }
    </style>

    <style>
        .table > :not(caption) > * > * {
            padding: 1px;
        }

        .even {
            background-color: #F2F2F2 !important;
        }

        .odd {
            background-color: #FFFFFF !important;
        }

        input, select {
            padding: 10px;
        }

        label {
            color: black;
        }

    </style>
</head>

<body>
    <!--    Main Content-->
    <main class="main" id="top">
        <nav>
            <div class="navbar">
                <i class='bx bx-menu'></i>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fa-solid fa-bars text-white fs-3"></i></button>

                <div class="logo"><a href="#">ART STUDIO</a></div>
                <div class="nav-links">
                    <div class="sidebar-logo">
                        <span class="logo-name">ART STUDIO</span>
                        <span class="close" style="color:white">                        <i class="fa-solid fa-xmark"></i></span>
                    </div>
                    <ul class="links">
                        <li><a href="/Client/index">Client</a></li>
                        <li><a href="/Lookup/index">Lookup</a></li>
                        <li><a href="/Enrollment/index">Enrollment</a></li>
                        <li><a href="/Payment/index">Payment</a></li>
                        <li><a href="/Expenses/index">Expenses</a></li>
                        <li><a href="/MaterialPurchase/index">Material Purchase</a></li>
                        <li><a href="/Attendance/index">Attendance</a></li>

                        <li>
                            <a href="#">Reports</a>
                            <span class="htmlcss-arrow" style="color:white"><i class="fa-solid fa-chevron-down htmlcss-arrow"></i></span>
                            <ul class="htmlCss-sub-menu sub-menu" style="padding-left:0px">
                                <li><a href="/Payment/Report">Payments </a></li>
                                <li><a href="/Expenses/Report">Expenses </a></li>
                                <li><a href="/MaterialPurchase/Report">Material Purchases </a></li>
                                <li><a href="/Attendance/Report">Attendance </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <section style="margin-top:30px">
            <div class="container">
                <div class=" breadcrumbs ace-save-state breadcrumbs-fixed" style="background-color:white;margin-top:8px ">
                    <div class="panel-body">
                        <h2 style="color:black; display:inline-block">
                            <i class="fa fa-calendar" style="color:#65e4a3;"></i>
                            @ViewData["Title"]
                        </h2>

                        <div id="DivButtons" style="display:inline-block;float:right;margin:10px;padding:0">
                            <button id="btnSave" class="btn btn-success text-dark fs-1" type="button" @*data-toggle="modal" data-target="#ModalConfirm"*@
                                    style="padding:3px;width:120px">
                                <i class="glyphicon glyphicon-floppy-saved "></i>
                                Save
                            </button>
                            <button type="button" id="btnSearch" class="btn btn-success text-dark fs-1" data-bs-toggle="modal" data-bs-target="#ShowData" data-backdrop="static" data-keyboard="false"
                                    style="padding:3px;width:120px">
                                <i class="ace-icon glyphicon  glyphicon-search "></i>
                                Search
                            </button>
                            <button id="btnRemove" class="btn btn-success text-dark fs-1" type="button"
                                    style="padding:3px;width:120px">
                                <i class="glyphicon glyphicon-floppy-remove "></i>
                                Remove
                            </button>
                        </div>
                    </div>
                </div>
                <hr style="width:100%;height:3px;color:#0a2640" />

                @RenderBody()

            </div> <!-- end of .container-->
        </section><!-- <section> close ============================-->

    </main>

    <!--    JavaScripts-->
    <script src="~/vendors/popper/popper.min.js"></script>
    <script src="~/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="~/vendors/anchorjs/anchor.min.js"></script>
    <script src="~/vendors/is/is.min.js"></script>
    <script src="~/vendors/lodash/lodash.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/vendors/prism/prism.js"></script>
    <script src="~/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/js/theme.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>


    <script src="https://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jqueryui/jquery-ui.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/lib/datatables-1.13.8/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatables-1.13.8/js/datatables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('.form-select').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    @* Script for Navbar *@
    <script>
        let navbar = document.querySelector(".navbar");

        // sidebar open close js code
        let navLinks = document.querySelector(".nav-links");
        let menuOpenBtn = document.querySelector(".navbar .navbar-toggler");
        let menuCloseBtn = document.querySelector(".nav-links .close");
        menuOpenBtn.onclick = function () {
            navLinks.style.left = "0";
        }
        menuCloseBtn.onclick = function () {
            navLinks.style.left = "-100%";
        }


        // sidebar submenu open close js code
        let htmlcssArrow = document.querySelector(".htmlcss-arrow");
        htmlcssArrow.onclick = function () {
            navLinks.classList.toggle("show1");
        }


    </script>

</body>

</html>
